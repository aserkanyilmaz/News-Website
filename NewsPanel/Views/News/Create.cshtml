@model NewsEntities.Entities.News

@{
    ViewData["Title"] = "Create";
}

<h1>CREATE NEWS</h1>

<h4>News</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewsName" class="control-label"></label>
                <input asp-for="NewsName" class="form-control" />
                <span asp-validation-for="NewsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsTitle" class="control-label"></label>
                <input asp-for="NewsTitle" class="form-control" />
                <span asp-validation-for="NewsTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsContent" class="control-label"></label>
                <input asp-for="NewsContent" class="form-control" />
                <span asp-validation-for="NewsContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsExpo" class="control-label"></label>
                <input asp-for="NewsExpo" class="form-control" />
                <span asp-validation-for="NewsExpo" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(s => s.CategoryId, new SelectList(ViewBag.Category, "Value", "Text"), " Choose Category",
               new { @class = "form-control", name="CategoryId" })
            </div>
                </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
